<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFirstApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.MyFirstApplication.RedText</item>
    </style>
    <style name="Theme.MyFirstApplication.RedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">100sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">X</item>
        <item name="backgroundTint">@color/red</item>
    </style>
    <style name="Theme.MyFirstApplication.RedText" parent="android:Widget.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="Theme.MyFirstApplication.BlackText" parent="Theme.MyFirstApplication.RedText">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>